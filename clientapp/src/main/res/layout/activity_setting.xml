<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/activity_page">

    <RelativeLayout style="@style/topbar_bg">

        <ImageButton style="@style/topbar_return_img" />

        <TextView
            style="@style/topbar_title"
            android:layout_centerHorizontal="true"
            android:text="设置" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/match_match"
        android:layout_weight="1">


        <ScrollView style="@style/match_match" >

            <LinearLayout style="@style/ll_vertical_match_match" >



                <LinearLayout
                    android:id="@+id/btn_setting_person"
                    style="@style/content_item_white" >

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="1"
                        android:text="个人账户" />

                    <ImageView
                        style="@style/content_item_rt_img"
                        android:padding="0dp" />
                </LinearLayout>

                <View style="@style/divider_horizontal_1px" />

                <LinearLayout
                    android:id="@+id/btn_setting_scan_robot"
                    style="@style/content_item_white" >

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="1"
                        android:text="扫描机器人" />

                    <ImageView
                        style="@style/content_item_rt_img"
                        android:padding="0dp" />
                </LinearLayout>
                <View style="@style/divider_horizontal_1px" />

                <LinearLayout
                    android:id="@+id/btn_setting_update"
                    style="@style/content_item_white" >

                    <TextView
                        style="@style/content_item_lf_tv"
                        android:layout_weight="1"
                        android:text="版本更新" />

                    <ImageView
                        style="@style/content_item_rt_img"
                        android:padding="0dp" />
                </LinearLayout>
                <View
                    style="@style/divider_horizontal_1px"
                    android:layout_marginBottom="@dimen/item_padding_bottom" />

            </LinearLayout>
        </ScrollView>
    </RelativeLayout>
</LinearLayout>