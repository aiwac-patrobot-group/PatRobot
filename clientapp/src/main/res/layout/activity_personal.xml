<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        style="@style/activity_page"
        tools:context=".activity.setting.PersonalActivity">

    <RelativeLayout style="@style/topbar_bg"
        tools:ignore="MissingConstraints">

        <ImageButton style="@style/topbar_return_img"
            android:id="@+id/backButton" />

        <TextView
            style="@style/topbar_title"

            android:layout_centerHorizontal="true"
            android:text="个人账户" />
    </RelativeLayout>

    <ScrollView
        style="@style/ll_vertical_match_match"
        android:layout_weight="1" >

        <LinearLayout style="@style/ll_vertical_match_match" >


            <View
                style="@style/divider_horizontal_1px" />

            <LinearLayout
                style="@style/content_item_white"
                android:focusable="true"
                android:focusableInTouchMode="true">


                <TextView
                    android:id="@+id/et_phone_number"
                    style="@style/content_item_lf_tv"
                    android:layout_weight="0.15"
                    android:background="@color/white"
                    android:text="账户"
                    android:textColor="@color/black_slight" />

                <EditText
                    android:id="@+id/tv_phone_number"
                    style="@style/content_item_lf_tv"
                    android:layout_weight="1"
                    android:hint="手机号"
                    android:background="@color/white"/>


            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout
                style="@style/content_item_white"
                android:focusable="true"
                android:focusableInTouchMode="true" >

                <TextView
                    android:id="@+id/et_mac_address"
                    style="@style/content_item_lf_tv"
                    android:layout_weight="0.09"
                    android:background="@color/white"
                    android:text="机器人"
                    android:textColor="@color/black_slight" />


                <EditText
                    android:id="@+id/tv_mac_address"
                    style="@style/content_item_lf_tv"
                    android:layout_weight="1"
                    android:hint="机器人"
                    android:background="@color/white"/>


            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />

            <LinearLayout
                android:id="@+id/btn_personal_change_password"
                style="@style/content_item_white" >

                <TextView
                    style="@style/content_item_lf_tv"
                    android:layout_weight="1"
                    android:text="修改密码" />

                <ImageView
                    style="@style/content_item_rt_img"
                    android:padding="0dp" />
            </LinearLayout>

            <View style="@style/divider_horizontal_1px" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>